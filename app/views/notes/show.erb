
<h2>Note #<%= @note.id%></h2>

<br>
<% if @note.contact %>
  <h4>A Note about <%= @note.contact.name%></h4>
  <p><%=@note.content%></p>
  <br>
  <form method="get" action="/notes/<%=@note.id%>/edit">
    <input type="submit" value="Edit Note">
  </form>
<%end%>

<% if @note.interaction %>
  <h3>A Note about an Interaction on <a href="/interactions/<%=@note.interaction.id%>"><%= @note.interaction.date%></a></h3>
  <p><%=@note.content%></p>
  <%if !@note.interaction.contacts.empty?%>
    <h4>Involving</h4>
    <%@note.interaction.contacts.each do |c|%>
      <p> <a href="/contacts/<%=c.id%>"><%=c.name%></a></p>
    <%end%>
  <%end%>
  <br>
  <form method="get" action="/notes/<%=@note.id%>/edit">
    <button type="submit" value="Edit Note" class="create-button">Edit Note</button>
  <br></br>
<%end%>

<br>
<form method="post" action="/notes/<%=@note.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <button type="submit" value="Delete Note" class="create-button">Delete Note</button>
  <br></br>
</form>